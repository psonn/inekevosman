<% provide(:title, @article.title) %>

<div class="panel panel-default">
  <div class="panel-heading">
    <div class="panel-title">
      <h1><%= wrap(@article.title) %></h1>
    </div>
  </div>
  <div class="panel-body">

	<p>
	<%= image_tag @article.image_url(:medium).to_s, class: "img-responsive" %>
	</p>

	<p>Geplaatst door <strong><%= @article.user.username if @article.user %></strong> op <%= @article.created_at.strftime("%d/%m/%Y") %> om <%= @article.created_at.strftime("%H:%M") %></p>

	<p>
	  <%= wrap((@article.body).html_safe) %>
	</p>

  </div>  
  <div class="panel-footer">
  	<% if current_user && @article.user == current_user %>
  	<%= link_to 'Edit', edit_article_path(@article) %> |
  	<% end %>
  	<%= link_to 'Back', overview_path %>
  </div>
</div>